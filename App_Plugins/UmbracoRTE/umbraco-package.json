{
  "name": "Onatrix_RTE",
  "alias": "Onatrix.RTE",
  "extensions": [
    {
      "type": "tiptapToolbarExtension",
      "kind": "styleMenu",
      "alias": "Onatrix.Tiptap.StyleMenu",
      "name": "Onatrix Tiptap Style Menu",
      "meta": {
        "alias": "OnatrixStyleMenu",
        "icon": "icon-palette",
        "label": "Size"
      },
      "items": [

        {
          "label": "14px",
          "items": [
            {
              "label": "Light",
              "data": {
                "tag": "p",
                "class": "rte-text-14 rte-weight-light"
              }
            },
            {
              "label": "Normal",
              "data": {
                "tag": "p",
                "class": "rte-text-14 rte-weight-normal"
              }
            },
            {
              "label": "Bold",
              "data": {
                "tag": "p",
                "class": "rte-text-14 rte-weight-bold"
              }
            }
          ]
        },
        {
          "label": "16px",
          "items": [
            {
              "label": "Light",
              "data": {
                "tag": "p",
                "class": "rte-text-16 rte-weight-light"
              }
            },
            {
              "label": "Normal",
              "data": {
                "tag": "p",
                "class": "rte-text-16 rte-weight-normal"
              }
            },
            {
              "label": "Bold",
              "data": {
                "tag": "p",
                "class": "rte-text-16 rte-weight-bold"
              }
            }
          ]
        },
        {
          "label": "20px",
          "items": [
            {
              "label": "Light",
              "data": {
                "tag": "p",
                "class": "rte-text-20 rte-weight-light"
              }
            },
            {
              "label": "Normal",
              "data": {
                "tag": "p",
                "class": "rte-text-20 rte-weight-normal"
              }
            },
            {
              "label": "Bold",
              "data": {
                "tag": "p",
                "class": "rte-text-20 rte-weight-bold"
              }
            }
          ]
        }
      ]
    },
    {
      "type": "tiptapToolbarExtension",
      "kind": "styleMenu",
      "alias": "Onatrix.Tiptap.BrandColors",
      "name": "Onatrix Brand Colors",
      "meta": {
        "alias": "onatrixBrandColors",
        "label": "Colors"
      },
      "items": [
        {
          "label": "Main",
          "data": {
            "tag": "span",
            "class": "rte-main-color"

          },
          "appearance": { "style": "background-color: #4F5955; color: black; padding: 5px" }
        },
        {
          "label": "Body Text",
          "data": {
            "tag": "span",
            "class": "rte-body-text-color"
          },
          "appearance": { "style": "background-color: #535656; color: black; padding: 5px" }
        }
      ]
    }
  ]
}
